{
  "extends": "xo",
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "rules": {
    "max-len": [
      2,
      170
    ],
    "@typescript-eslint/no-unused-vars": 2,
    "indent": [
      "error",
      4
    ],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }]
  }
}
