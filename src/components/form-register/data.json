{
    "form_body": {
        "class": "register-form",
        "title": "Регистрация",
        "submit_button_text": "Зарегистрироваться",
        "additional_link": "login.html",
        "additional_link_text": "Войти"
    },
    "fields": [
        {
            "class": "register-form__email",
            "label": "Почта",
            "data_name": "email",
            "type": "email",
            "placeholder": "Укажите свою почту",
            "required": "required",
            "validationMessage": "Неправильный формат адреса эл. почты"
        },
        {
            "class": "register-form__login",
            "label": "Логин",
            "data_name": "login",
            "type": "text",
            "placeholder": "Укажите свой логин",
            "required": "required"
        },
        {
            "class": "register-form__name",
            "label": "Имя",
            "data_name": "name",
            "type": "text",
            "placeholder": "Укажите свое имя",
            "required": "required"
        },
        {
            "class": "register-form__surname",
            "label": "Фамилия",
            "data_name": "surname",
            "type": "text",
            "placeholder": "Укажите свою фамилию",
            "required": "required"
        },
        {
            "class": "register-form__phone",
            "label": "Телефон",
            "data_name": "phone",
            "type": "tel",
            "placeholder": "7(___)___-__-__",
            "required": "required",
            "pattern": "pattern=\"7\\([0-9]{3}\\)[0-9]{3}-[0-9]{2}-[0-9]{2}\"",
            "validationMessage": "Укажите в формате 7(___)___-__-__",
            "permanentHint": true
        },
        {
            "class": "register-form__password",
            "label": "Пароль",
            "data_name": "password",
            "type": "password",
            "placeholder": "Придумайте себе пароль",
            "required": "required",
            "pattern": "pattern=\"(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])\\S{6,}\"",
            "validationMessage": "Мин. 6 символов, 1 число и 1 заглавная",
            "permanentHint": true
        },
        {
            "class": "register-form__password-repeat",
            "label": "Пароль еще раз",
            "data_name": "password_repeat",
            "type": "password",
            "placeholder": "Повторите пароль для проверки",
            "required": "required",
            "validationMessage": "Пароли не совпадают"
        }
    ]
}
