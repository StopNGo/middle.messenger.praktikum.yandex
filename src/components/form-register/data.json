{
    "form_body": {
        "class": "register-form",
        "title": "Регистрация",
        "submit_button_text": "Зарегистрироваться",
        "additional_link": "login.html",
        "additional_link_text": "Войти"
    },
    "fields": [
        {
            "class": "register-form__email",
            "label": "Почта",
            "data_name": "email",
            "type": "email",
            "placeholder": "Укажите свою почту",
            "required": "required"
        },
        {
            "class": "register-form__login",
            "label": "Логин",
            "data_name": "login",
            "type": "text",
            "placeholder": "Укажите свой логин",
            "required": "required"
        },
        {
            "class": "register-form__name",
            "label": "Имя",
            "data_name": "name",
            "type": "text",
            "placeholder": "Укажите свое имя",
            "required": "required"
        },
        {
            "class": "register-form__surname",
            "label": "Фамилия",
            "data_name": "surname",
            "type": "text",
            "placeholder": "Укажите свою фамилию",
            "required": "required"
        },
        {
            "class": "register-form__phone",
            "label": "Телефон",
            "data_name": "phone",
            "type": "tel",
            "placeholder": "7(___)___-__-_",
            "required": "required",
            "pattern": "pattern=\"7\\([0-9]{3}\\)[0-9]{3}-[0-9]{2}-[0-9]{2}\""
        },
        {
            "class": "register-form__password",
            "label": "Пароль",
            "data_name": "password",
            "type": "password",
            "placeholder": "Придумайте себе пароль",
            "required": "required"
        },
        {
            "class": "register-form__password-repeat",
            "label": "Пароль",
            "data_name": "password_repeat",
            "type": "password",
            "placeholder": "Повторите пароль для проверки",
            "required": "required"
        }
    ]
}
